<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            tools:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#525b5b5b"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/readCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_play"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:maxWidth="80dp"
                android:paddingLeft="4dp"
                android:textColor="#fff"
                android:textSize="12sp"
                tools:layout_width="80dp"
                tools:text="1111412412142" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="2dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textColor="#fff"
                android:textSize="12sp"
                tools:text="sdfsf" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/green_light1"
            android:padding="2dp"
            android:textSize="10sp"
            android:textColor="#fff"
            android:visibility="gone"
            android:gravity="center"
            android:text="其他" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pic"
        android:background="@color/WHITE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleCn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="14dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="@color/BLACK"
            android:textSize="12sp"
            tools:text="做全新的自己" />
    </LinearLayout>
</RelativeLayout>