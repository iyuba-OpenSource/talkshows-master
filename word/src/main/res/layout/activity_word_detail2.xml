<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ToolbarPopupTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?android:attr/homeAsUpIndicator"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="单词学习"/>
        <!--<ImageView
            android:id="@+id/btn_auto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_auto_open"
            />-->
        <ImageView
            android:id="@+id/btnAuto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_auto_close"
            android:layout_marginEnd="10dp"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_white_10"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_word"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="word"
                android:lineSpacingExtra="5dp"
                />
            <ImageView
                android:id="@+id/img_speaker"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wordspeaker"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <com.iyuba.wordtest.widget.PronTextView
            android:id="@+id/txt_pron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/smssdk_black"
            android:text="porn"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_explain"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/smssdk_black"
                android:textSize="16sp"
                android:text="def"
                />
            <CheckBox
                android:id="@+id/cb_collect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@drawable/selector_collect"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_round_white_10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/rl_top"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/video_image"
                android:layout_width="280dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">
                <com.devbrackets.android.exomedia.ui.widget.VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"/>
                <ImageView
                    android:id="@+id/word_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/round_bg"
                    />
                <ImageView
                    android:id="@+id/video_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/video_play" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_image"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5dp"
                android:text="sentence"
                android:textColor="@color/smssdk_black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txt_sentence_ch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/smssdk_black"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:lineSpacingExtra="5dp"
                android:text="句子"
                android:gravity="center"
                android:layout_below="@id/txt_sentence"
                />

            <!--纠音-->
            <LinearLayout
                android:id="@+id/word_correct"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_above="@id/txt_sentence"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sen_eval_bkg"
                android:gravity="center"
                android:visibility="invisible"
                tools:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/word_commit"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="单词发音有误"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/bt_commit"
                    android:layout_width="66dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/dialog_bkg"
                    android:text="立即纠音"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/scoreLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/txt_sentence_ch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:id="@+id/img_low_score"
                    android:layout_centerInParent="true"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/ic_low_score"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/ll_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sen_word_score"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eval_word_score"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/evalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/scoreLayout"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_original"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/wordtest_speaker_anim_back"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/wordtest_speaker_anim"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="听原音"
                        android:textColor="@color/smssdk_black" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_record_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_record"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/wordtest_record_anim"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/click_record_hint"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/smssdk_black"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:text="点击录音" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_own"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    tools:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/img_own"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/wordtest_speaker_anim_own"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/smssdk_black"
                        android:text="听跟读" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evalLayout"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/iv_last"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="28dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/sen_pre_word" />
                <TextView
                    android:id="@+id/txt_pos_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    tools:textColor="@color/smssdk_black"
                    android:text="1/70" />
                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/sen_next_word" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>