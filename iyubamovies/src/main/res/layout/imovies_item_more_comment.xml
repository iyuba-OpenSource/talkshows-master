<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/imv_comment_position"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/imovies_kuang"
            android:text="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="username"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/imvs_comment_content_color"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/imv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="This is the content for a comment"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-2.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6.0dip"
            android:textColor="@color/imvs_comment_content_color"
            android:textSize="16.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/imv_comment_item_sendtime"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:text="comment time"
        android:textColor="#b1b1b1"
        android:textSize="12sp" />

</LinearLayout>