<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="3dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/imv_circle_item"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/imovies_red_circle" />

    <ImageView
        android:id="@+id/imv_video_download_bs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imv_circle_item"
        android:layout_alignRight="@+id/imv_circle_item"
        android:layout_below="@+id/imv_circle_item"
        android:src="@drawable/imovies_download_bs" />
</RelativeLayout>