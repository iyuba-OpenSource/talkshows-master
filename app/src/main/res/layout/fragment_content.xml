<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--界面-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        />

    <!--底部-->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adLayout">
        <!--进度-->
        <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/playTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <SeekBar
                android:id="@+id/playProgress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="3dp"
                android:maxHeight="3dp"
                android:progressDrawable="@drawable/layer_seekbar_progress"
                android:thumb="@drawable/ic_study_circle_green"/>
            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
        <!--设置-->
        <LinearLayout
            android:id="@+id/settingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray_f0_personal"
            >
            <LinearLayout
                android:id="@+id/abPlayLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/abPlayImg"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_study_ab_normal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/textSyncLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/textSyncImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_study_sync_normal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/playSpeedLayout"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/playSpeedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text="倍速：1.0x"
                    android:background="@drawable/shape_corner_green_border_10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/playModeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/playModeImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_study_mode_single"/>
            </LinearLayout>
        </LinearLayout>
        <!--播放-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/textLanguage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_study_language_cn"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/playAudio"
                app:layout_constraintBottom_toBottomOf="@id/playAudio"
                app:layout_constraintRight_toLeftOf="@id/preSentence"
                />
            <ImageView
                android:id="@+id/preSentence"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_study_pre"

                app:layout_constraintLeft_toRightOf="@id/textLanguage"
                app:layout_constraintTop_toTopOf="@id/playAudio"
                app:layout_constraintBottom_toBottomOf="@id/playAudio"
                app:layout_constraintRight_toLeftOf="@id/playAudio"
                />
            <ImageView
                android:id="@+id/playAudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_study_play"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/nextSentence"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_study_next"

                app:layout_constraintLeft_toRightOf="@id/playAudio"
                app:layout_constraintTop_toTopOf="@id/playAudio"
                app:layout_constraintBottom_toBottomOf="@id/playAudio"
                app:layout_constraintRight_toLeftOf="@id/setting"
                />
            <ImageView
                android:id="@+id/setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_study_setting"
                android:scaleType="fitXY"

                app:layout_constraintLeft_toRightOf="@id/nextSentence"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/playAudio"
                app:layout_constraintBottom_toBottomOf="@id/playAudio"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!--广告-->
    <RelativeLayout
        android:id="@+id/adLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/adImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/adClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_study_close"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/adTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:text="推广"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>