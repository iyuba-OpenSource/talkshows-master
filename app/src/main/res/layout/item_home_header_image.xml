<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0.5dp"
        android:orientation="horizontal">

        <!--这里根据接口进行展示-->
        <TextView
            android:id="@+id/tv_mooc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/pig_all"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="微课学习"
            android:textSize="12sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="6dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/ic_course"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="课程"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_word"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="6dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/icon_words"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="单词"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_home_my_voice"
            android:drawablePadding="6dp"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="我的配音"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_home_dailybonus"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:drawableTint="@color/colorPrimary"

            android:text="每日打卡"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_home_all_video"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:drawableTint="@color/colorPrimary"
            android:text="全部"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#e2e2e2" />
</LinearLayout>